{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "server/index.cjs",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30,
        "maxRequestBodySize": "50mb"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "server/index.cjs"
    },
    {
      "source": "/admin/(.*)",
      "destination": "server/index.cjs"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "JWT_SECRET": "aether-art-space-jwt-secret-2024"
  }
}
